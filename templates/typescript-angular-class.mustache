    private static transformRequest(obj: any): string {
        var str = [];
        for(var p in obj) {
            var val = obj[p];
            if(angular.isArray(val)) {
                val.forEach(function(val){
                    str.push(encodeURIComponent(p) + '=' + encodeURIComponent(val));
                });
            } else {
                str.push(encodeURIComponent(p) + '=' + encodeURIComponent(val));
            }
        }
        return str.join('&');
    }
